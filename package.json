{
  "name": "tmtcss",
  "version": "1.0.0",
  "description": "Reponsive CSS grid using text properties.",
  "main": "dist/js/index.js",
  "keywords": [
    "react",
    "bower",
    "javascript",
    "stylus"
  ],
  "scripts": {
    "build": "npm run build-js & npm run build-css",
    "build-js": "browserify src/js/index.js -d -t babelify | uglifyjs -m -c > dist/js/bundle.js",
    "build-css": "stylus -c src/stylus/ -o dist/css/",
    "watch": "npm run watch-js & npm run watch-css & npm run server",
    "watch-js": "browserify --debug src/js/ -d -o dist/js/bundle.js -v -t babelify",
    "watch-css": "stylus --sourcemap-inline -w src/stylus/ -o dist/css/",
    "server": "budo src/js/index.js:dist/js/bundle.js -v --live | garnish"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudbe/tmtcss.git"
  },
  "author": "Thibaud B.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thibaudbe/tmtcss/issues"
  },
  "homepage": "https://github.com/thibaudbe/tmtcss",
  "devDependencies": {
    "babelify": "^6.1.3",
    "browser-sync": "^2.0.1",
    "browserify": "^10.2.4",
    "budo": "^4.1.0",
    "envify": "^3.4.0",
    "garnish": "^2.1.3",
    "reactify": "^1.1.1",
    "stylus": "^0.51.1",
    "uglify-js": "^2.4.23",
    "uglifyify": "^3.0.1",
    "watchify": "^3.2.3"
  },
  "dependencies": {
    "react": "^0.13.3",
    "react-tools": "^0.13.3"
  }
}
